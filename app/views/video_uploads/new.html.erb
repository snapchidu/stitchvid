<% if current_user %>
  <div class="container">
    <h1>Upload video</h1>
      <%= form_for @video_upload do |f| %>

        <div class="form-group">
          <%= f.label :file %>
          <%= f.file_field :file, class: 'form-control', required: true %>
        </div>

        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control', required: true %>
        </div>

        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: 'form-control', cols: 3 %>
        </div>

         <div class="form-group">
          <%= f.label :all_tags %>
          <%= f.text_area :all_tags, class: 'form-control', cols: 3 %>
        </div>
        <%= f.submit 'Upload', class: 'btn btn-primary' %>
      <% end %>

      </br>
      </br>

      <%= link_to 'or add a link to your stitch', new_video_path %>
  </div>
<% else %>

  <p id="googlelogin"> Login in with <a href="/auth/google_oauth2"><img src="https://developers.google.com/+/images/branding/g+128.png"/></a> to post a video </p>
  
<% end %>