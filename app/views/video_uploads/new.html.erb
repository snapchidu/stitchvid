
  <div class="container">
    <h1>Upload video</h1>
      <%= form_for @video_upload do |f| %>

        <div class="form-group">
          <%= f.label :file %>
          <%= f.file_field :file, class: 'form-control', required: true %>
        </div>

        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control', required: true %>
        </div>

        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: 'form-control', cols: 3 %>
        </div>

         <div class="form-group">
          <%= f.label :tag %>
          <% if params[:tag] == nil %>
            <%= f.text_area :tag, class: 'form-control', cols: 3 %>
          <% else %>
            <%= f.text_area :tag, class: 'form-control', cols: 3, value: params[:tag] %>
          <% end %>
        </div>
        <%= f.submit 'Upload', class: 'btn btn-primary' %>
      <% end %>

      </br>
      </br>

      <% if params[:tag] == nil %>
        <%= link_to 'or add a link to your stitch', new_video_path %>
      <% else %>
        <%= link_to 'or add a link to your stitch', new_video_path(tag: params[:tag]) %>
      <% end %>
  </div>
